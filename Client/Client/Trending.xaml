<UserControl x:Class="Client.Trending"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
                      mc:Ignorable="d" 
         d:DesignWidth="540" FontFamily="/SegoeUI7/segoeui_0.ttf#Segoe UI">
    <Grid Margin="15,0,15,0">
        <Rectangle x:Name="TheBackground" RadiusX="3" RadiusY="3" Stroke="#FF9FBDD2" Margin="-25,0,-25,0" Focusable="True">
            <Rectangle.Fill>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="#BFDCF0FF"/>
                    <GradientStop Color="#7FCDE9FF" Offset="1"/>
                </LinearGradientBrush>
            </Rectangle.Fill>
        </Rectangle>
        <Grid>
            <Rectangle x:Name="SelectPost" Margin="-15,1,-15,1" Fill="#3FFFFFFF" MouseEnter="SelectPost_MouseEnter" MouseLeave="SelectPost_MouseLeave" MouseUp="SelectPost_MouseUp" Opacity="0"/>
            <TextBlock x:Name="Name" Margin="0,9,0,0" Foreground="#FF0D467A" FontSize="14" HorizontalAlignment="Left" VerticalAlignment="Top" MouseEnter="SelectPost_MouseEnter" MouseLeave="SelectPost_MouseLeave" MouseUp="SelectPost_MouseUp" Text="1. #fishisoverparty"/>
            <TextBlock x:Name="Details" FontFamily="/SegoeUI7/segoeuii_0.ttf#Segoe UI" Foreground="#FF9AA6B1" Margin="0,26,0,10" HorizontalAlignment="Left" VerticalAlignment="Top" MouseEnter="SelectPost_MouseEnter" MouseLeave="SelectPost_MouseLeave" MouseUp="SelectPost_MouseUp" Text="-99 posts - politics"/>
        </Grid>
    </Grid>
</UserControl>
